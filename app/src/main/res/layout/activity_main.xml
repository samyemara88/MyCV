<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252a30"
    tools:context="com.example.soumaya.mycv.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="17dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="99dp"
                android:layout_height="95dp"
                app:srcCompat="@mipmap/ic_launcher"
                tools:layout_editor_absoluteX="245dp"
                tools:layout_editor_absoluteY="16dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Développeur "
                    android:textColor="#7cc576"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="26dp" />


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text=" EMARA"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0.094"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.155" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samy"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="105dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="225dp"
                    android:layout_height="fill_parent"
                    android:text="samyemara88@gmail.com"
                    android:textAllCaps="false"
                    android:textColor="@android:color/background_light"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="32dp"
                    tools:layout_editor_absoluteY="132dp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:orientation="vertical"
            android:weightSum="1">


            <Button
                android:id="@+id/buttonFormations"
                android:layout_width="302dp"
                android:layout_height="52dp"
                android:layout_marginBottom="30dp"
                android:background="#3d464b"
                android:text="Formations"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="294dp" />

            <Button
                android:id="@+id/buttonCompetences"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginBottom="30dp"
                android:background="#3d464b"
                android:elevation="0dp"
                android:text="Compétences"
                android:textColor="@android:color/background_light"
                android:textColorHighlight="@android:color/background_light"

                android:textStyle="bold"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="207dp" />


            <Button
                android:id="@+id/buttonExperiences"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="0.13"

                android:background="#3d464b"
                android:text="Expériences"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="30dp"
                tools:layout_editor_absoluteY="379dp" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
